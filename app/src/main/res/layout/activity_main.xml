<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.Activity.MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-1dp" />

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/cicrle_indicator"
        android:layout_width="wrap_content"
        app:ci_drawable="@drawable/bg_indicator"
        android:layout_height="40dp"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="193dp"
        android:orientation="horizontal"
        tools:ignore="Orientation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/layout_Contest"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:onClick="onClick"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/form"
                android:src="@drawable/thisathach"
          />

            <TextView
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:minLines="2"
                android:text="THI SÁT HẠCH"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:id="@+id/layout_Learning"
                android:onClick="onClick"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/form"
                android:src="@drawable/learning" />

            <TextView
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:minLines="2"
                android:textColor="#000000"
                android:text="HỌC LÍ THUYẾT"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/form"
                android:src="@drawable/bienbao" />

            <TextView
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:maxLines="2"
                android:textColor="#000000"
                android:text="BIỂN BÁO ĐƯỜNG BỘ"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@id/layout_1"
        android:orientation="horizontal"
        tools:ignore="Orientation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/form"
                android:src="@drawable/brain" />

            <TextView
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:maxLines="2"
                android:text="MẸO THI KẾT QUẢ CAO"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/layout_SearchRule"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/form"
                android:src="@drawable/law" />

            <TextView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:maxLines="2"
                android:text="TRA CỨU LUẬT NHANH"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/form"
                android:src="@drawable/failure" />

            <TextView
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:maxLines="2"
                android:text="CÁC CÂU       HAY SAI"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>